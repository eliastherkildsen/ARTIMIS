            </ListView>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#onBtnEditClick" text="Edit">
                     <HBox.margin>
                        <Insets left="30.0" right="30.0" top="30.0" />
                     </HBox.margin>
                  </Button>
